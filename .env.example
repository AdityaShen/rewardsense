# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=rewardsense
GCP_BUCKET_NAME=rewardsense-dvc-store
GOOGLE_APPLICATION_CREDENTIALS=~/.config/gcloud/application_default_credentials.json
GCP_REGION=us-central1
GKE_CLUSTER_NAME=rewardsense-cluster
AIRFLOW__CORE__DAGS_FOLDER = ./dags
MLFLOW_ARTIFACT_ROOT = gs://rewardsense-dvc-store/mlflow-artifacts

# ============================================
# Cloud SQL (PostgreSQL) Configuration
# ============================================
CLOUD_SQL_INSTANCE=rewardsense-prod:us-central1:rewardsense-db
DB_USER=rewardsense_user
DB_PASSWORD=your-secure-password-here
DB_NAME=rewardsense
DB_HOST=localhost
DB_PORT=5432

# For production Cloud SQL connection
CLOUD_SQL_CONNECTION_NAME=rewardsense-prod:us-central1:rewardsense-db

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ============================================
# BigQuery Configuration
# ============================================
BIGQUERY_DATASET=rewardsense_analytics
BIGQUERY_LOCATION=US

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=generate-a-secure-random-key-here
AIRFLOW__CORE__DAGS_FOLDER=./infrastructure/airflow_dags

# ============================================
# DVC Configuration
# ============================================
DVC_REMOTE=gcs-remote

# ============================================
# MLflow Configuration
# ============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=rewardsense-experiments
MLFLOW_ARTIFACT_ROOT=gs://rewardsense-mlflow-artifacts
MLFLOW_BACKEND_STORE_URI=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/mlflow

# ============================================
# API Configuration
# ============================================
CREDIT_CARD_BONUSES_API_KEY=your-api-key-here
CREDIT_CARD_BONUSES_API_URL=https://api.creditcardbonuses.com/v1

# ============================================
# FastAPI Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True
CORS_ORIGINS=["http://localhost:3000","https://rewardsense.com"]

# ============================================
# OpenAI/LLM Configuration (for Explanations)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ============================================
# Scraper Configuration
# ============================================
SCRAPER_USER_AGENT=RewardSense/1.0 (Educational Project)
SCRAPER_RATE_LIMIT=1
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30
SCRAPER_RESPECT_ROBOTS_TXT=True

# Target scraping sources
SCRAPE_NERDWALLET=True
SCRAPE_POINTS_GUY=False
SCRAPE_ISSUERS=True

# ============================================
# Alert Configuration
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#rewardsense-alerts
SENDGRID_API_KEY=your-sendgrid-api-key
ALERT_EMAIL=alerts@rewardsense.com
PAGERDUTY_API_KEY=your-pagerduty-key

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
EVIDENTLY_MONITORING=True
DATA_DRIFT_THRESHOLD=0.15
PREDICTION_DRIFT_THRESHOLD=0.10

# ============================================
# Pipeline Configuration
# ============================================
PIPELINE_SCHEDULE=@daily
DATA_RETENTION_DAYS=90
MODEL_RETRAINING_THRESHOLD=0.05
BATCH_SIZE=1000

# ============================================
# Synthetic Data Configuration
# ============================================
SYNTHETIC_USER_COUNT=100
SYNTHETIC_DATA_SEED=42
TRANSACTION_MONTHS=12
TRANSACTION_PER_USER_MEAN=50
TRANSACTION_PER_USER_STD=20

# ============================================
# Model Configuration
# ============================================
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1
XGBOOST_N_ESTIMATORS=100
TRAIN_TEST_SPLIT_RATIO=0.8
CROSS_VALIDATION_FOLDS=5

# ============================================
# Feature Engineering Configuration
# ============================================
DBSCAN_EPS=0.5
DBSCAN_MIN_SAMPLES=5
CATEGORY_ENCODING_METHOD=target

# ============================================
# Kubernetes Configuration
# ============================================
K8S_NAMESPACE=rewardsense
K8S_SERVICE_ACCOUNT=rewardsense-sa

# ============================================
# Environment & Logging
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=False

# ============================================
# Security
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT=100/minute

AIRFLOW_FERNET_KEY= <place key here>
